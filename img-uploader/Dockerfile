FROM node:lts-alpine3.17

#change ~/certs/ <=> path/to/directory/ssl-certs [should contain both cert and key generated by the root certificate for specified domain]
COPY ~/certs/*.pem /etc/nginx/certs

ENV APP_ENV=development

WORKDIR /src

COPY package*.json /src/

RUN npm install

COPY . .

EXPOSE 3000
EXPOSE 443

CMD ["npm", "start" ]